<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nook"
    android:orientation="vertical"
    tools:context=".InsectList">
    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/checkBoxFilterCaughtInsect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/checkboxfiltercaught" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/checkBoxCurrentInsect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/checkboxcurrent" />
            <CheckBox
                android:id="@+id/checkBoxCatchableTodayInsect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/checkboxtoday" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/listInsects"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10">

    </ListView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/bottombannerviewinsects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-5899740383904630/4415734769" />

</LinearLayout>